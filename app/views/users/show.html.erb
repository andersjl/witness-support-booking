<% provide( :title, t( "users.show.title", name: @user.name)) %>
<div class="row">
  <div class="col-md-12">
    <section>
      <h1><%= @user.name %></h1>
    </section>
<% if admin? || current_user?( @user) %>
    <section>
      <%= @user.email %>
    </section>
<%   if current_user?( @user) %>
    <section>
      <%= link_to t( "general.edit"), edit_user_path( current_user) %>
    </section>
<%   end %>
<% end %>
<% if master? && current_user?( @user)%>
    <section><%= link_to t( "courts.index.title"), courts_path %></section>
<% end %>
  </div>
</div>
<% if master? && current_user?( @user) %>
  <%= render partial: "databases/edit",
             locals: { database: @database, count_date: @count_date} %>
  <%= render partial: "shared/xml_dump_n_restore" %>
<% end %>
