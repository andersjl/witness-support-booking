<% provide( :title, 'Ny användare') %>
<h1>Ny användare</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for( @user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name, "Namn" %>
      <%= f.text_field :name %>
      <%= f.label :email, "E-post"%>
      <%= f.text_field :email %>
      <%= f.label :password, "Välj lösenord" %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, "Bekräfta lösenord" %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "Registrera ny användare",
                   :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

