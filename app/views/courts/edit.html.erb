<% provide( :title, @court.name) %>
<h1><%= t "courts.edit.title", name: @court.name %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @court do |f| %> 
      <%= render :partial => "shared/error_messages",
                 :locals => { :model => @court} %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :link %>
      <%= f.text_field :link %>
      <%= f.submit t "general.edit" %>
    <% end %>
  </div>
</div>

