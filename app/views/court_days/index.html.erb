<%  provide( :title, t( "court_days.index.title")) %>
    <h1><%= t( "court_days.index.title") %></h1>
<%  if @model_with_errors %>
<%=   render partial: "shared/error_messages",
             locals: { model: @model_with_errors} %>
<%  end %>
    <div id="court-days">
<%= render partial: "court_days/heading",
           locals: { date_span: 2, session_span: 3, note_span: 4} %>
<%  @court_days.each_with_index do |court_day, ix| %>
<%=   render partial: "court_days/court_day",
             locals:  { court_day: court_day, date_span: 2, session_span: 3,
                        note_span: 4, last: ix == @court_days.count - 1} %>
<%  end %>
    </div>
<%= render partial: "court_days/weekpicker",
           locals:  { wp_id: "bottom"} %>
